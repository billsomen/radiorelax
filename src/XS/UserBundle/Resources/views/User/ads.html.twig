                <h3><span class="fa fa-comment"></span> <a href="#">Annonces</a> <span class="fa fa-caret-right"></span> <a href="{{ path('xs_user_show', {'namespace': user_profile.namespace}) }}">{{ user_profile.nickname }}</a> </h3>
                <h4>{{ user_profile.ads | length }} Annonces</h4>
            </div>
            <div class="pull-right">
                <div class="form-group">
                    <div class="col-md-12">
                        <label>
                            <a href="{{ path('main_ads_add') }}">
                                <button title="Ajouter une nouvelle annonce" class="btn btn-primary"><span class="fa fa-plus"></span> Ajouter</button>
                            </a>
