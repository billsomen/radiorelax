                        </label>
                    </div>
                </div>
            </div>
        </div>
        <!-- END CONTENT FRAME TOP -->
        <!-- START CONTENT FRAME RIGHT -->
        <div class="content-frame-right">
            <div class="list-group list-group-contacts border-bottom push-down-10 scroll" style="height: 450px;">
                {% if user_profile.ads == null %}
                    <i>"Aucune annonce"</i>
                {% else %}
                    {% for ad in user_profile.ads %}
                        <a href="{{ path('main_ads_show', {'id': ad.id}) }}" class="list-group-item active">
                            <i class="{{ ad.generateIcon(1) }}"></i>
                            <span class="contacts-title">{{ user_profile.nickname }}</span>
                            <p>{{ ad.title }}</p>
                        </a>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <!-- END CONTENT FRAME RIGHT -->

        <!-- START CONTENT FRAME BODY -->
        <div class="content-frame-body content-frame-body-left">
            <hr>
            <ul>
                <li> <i> {{ user_profile.ads | length }} Annonces.</i></li>
