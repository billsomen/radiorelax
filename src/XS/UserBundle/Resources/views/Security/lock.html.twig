    <link href="{{ asset('assets/pages/css/lock-2.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}

{% block title %}
    User | Edutool
{% endblock %}

{% block body_class %} class="" {% endblock %}

{% block header %}
    {#On le vide pour l'instant, comme le template nen a pas besoin#}
{% endblock %}

{% block page_container %}
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="{{ path('xs_education_homepage') }}">
                <img class="login-logo" src="../assets/layouts/layout3/img/logo.10x.png" alt="logo"/>
            </a>
        </div>
        <div class="page-body">
            <img class="page-lock-img" src="../assets/pages/media/profile/profile.jpg" alt="">
            <div class="page-lock-info">
                <h1>Bob Nilson</h1>
                <span class="email"> bob@keenthemes.com </span>
                <span class="locked"> Locked </span>
                <form class="form-inline" action="index.html">
                    <div class="input-group input-medium">
                        <input type="text" class="form-control" placeholder="Password">
                        <span class="input-group-btn">
                                <button type="submit" class="btn green icn-only">
                                    <i class="m-icon-swapright m-icon-white"></i>
                                </button>
                            </span>
                    </div>
                    <!-- /input-group -->
                    <div class="relogin">
                        <a href="{{ path('login') }}"> Not Bob Nilson ? </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="page-footer-custom"> 2016 &copy; Edutool by <a href="www.bledhub.com"  target="_blank">BledHub</a>. </div>
    </div>
{% endblock %}

{% block footer %}
    {#Pas de footer classique...#}
{% endblock %}

{% block javascripts_page %}
