{% extends "@XSUser/base.html.twig" %}

{% block title %}
  {{ "xs_user.login.title"|trans }}
{% endblock %}
{% block page_content %}
  <div class="card bg-danger shadow border-0">
    <div class="card-body px-lg-5 py-lg-5">
      <div class="text-center text-muted mb-4">
        {% for flashMessage in app.session.flashbag.get('notice') %}
          <div class="alert alert-success text-center">
            <small>{{ flashMessage }}</small>
          </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
          <div class="alert alert-danger text-center">
            <small>{{ flashMessage }}</small>
          </div>
        {% endfor %}
        {% if error and error.message %}
          <div class="alert alert-danger">
            {{ error.message }}
          </div>
        {% endif %}
        {#<small>Bienvenue dans la Simulation GLPI</small>#}
      </div>
      <form role="form" action="{{ path('login_check') }}" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
          <div class="input-group input-group-alternative">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="ni ni-email-83"></i></span>
            </div>
            <input class="form-control" placeholder="Email" type="email" name="_username" autofocus required>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group input-group-alternative">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
            </div>
            <input class="form-control" placeholder="Password" type="password" name="_password" required>
          </div>
        </div>
        <input type="hidden" name="_target_path" value="#home" />
        <div class="text-center">
          <button type="submit" class="btn btn-white my-4">{{ 'xs_user.login.action'|trans }}</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row mt-3">
    {#<div class="col-6">
      <a href="#" class="text-light"><small>Mot de passe oubli√©?</small></a>
    </div>#}
    <div class="col-6 text-right">
      <a href="{{ path('signin') }}" class="text-light"><small>{{ 'xs_user.signin.hint'|trans }}</small></a>
    </div>
  </div>
{% endblock %}