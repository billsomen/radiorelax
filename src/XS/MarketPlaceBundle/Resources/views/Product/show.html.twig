            <div id="product-desc" class="tab-pane active">
              <div class="product-desc-area">
                <p>{{ product.description }}</p>
              </div>
            </div>
            <div id="product-add" class="tab-pane">
              <table class="product-table">
                <tbody>
                <tr>
                  <td class="table-label">Type de Logement</td>
                  <td>
                    <span class="text-primary">{{ product.house.type | trans }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Tarif annoncé</td>
                  <td>
                    <span class="text-primary"><span class="cart-total-item">{{ product.priceShown | amount_format }} / {{ product.payFrequency | trans}}</span></span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Tarif / mois</td>
                  <td>
                    <span class="text-primary"><span class="cart-total-item">{{ product.payMonth | amount_format }}</span></span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Adresse</td>
                  <td>
                    <span class="text-primary">{{ product.localisation.gmaps.formattedAddress }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Dimensions en mètre (LxlxH)</td>
                  <td>
                    <span class="text-primary">{{ product.house.length }} x {{ product.house.width }} x {{ product.house.height }} </span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Logement meublé ?</td>
                  <td>
                    {% if product.house.furnished %}
                      <span class="text-primary">Oui</span>
                    {% else %}
                      <span class="text-primary">Non</span>
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Places de Parking</td>
                  <td>
                    <span class="text-primary">{{ product.house.parking }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Chambres</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.bedRoom }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Salons</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.LivingRoom }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Cuisines</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.kitchen }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Salles de Bain</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.toilet }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Bureaux</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.office }}</span>
                  </td>
                </tr>
                <tr>
                  <td class="table-label">Qté Salles à Manger</td>
                  <td>
                    <span class="text-primary">{{ product.house.room.diningRoom }}</span>
                  </td>
                </tr>
                {#<tr>
                  <td class="table-label">Qté Toilettes</td>
                    <td>
                      <span class="text-primary">{{ product.house.toilet }}</span>
                    </td>
                </tr>#}
                </tbody>
              </table>
            </div>
            {#<div id="product-tags" class="tab-pane">
              <div class="product-tags-area">
                <form action="#">
                  <div class="form-group">
                    <label>Add Your Tags:</label>
                    <div class="clearfix">
                      <input type="text" class="form-control pull-left" required>
                      <input type="submit" class="btn btn-primary" value="Add Tags">
                    </div>
                  </div>
                </form>
                <p class="note">Use spaces to separate tags. Use single quotes (') for phrases.</p>
              </div>
            </div>#}
            <div id="product-reviews" class="tab-pane">
              {{ render(controller('XSCoreBundle:Review:add', {'target_id': product.id, 'target_name': 'Product'})) }}
            </div>
          </div>
        </div>
      </div>

