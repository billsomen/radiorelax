{% extends 'XSMarketPlaceBundle:Layout:base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block breadcrumb %}
  <section class="page-header mb-lg">

    <div class="container">
      <ul class="breadcrumb">
        <li><a href="#">Home</a></li>

        <li><a href="#">Fashion</a></li>
        <li class="active">Black Maxi Dress</li>
      </ul>
    </div>
  </section>
{% endblock %}

{% block body_banner %}
{% endblock %}

{% block container %}
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="product-view">
        <div class="product-essential">
          <div class="row">
            <div class="product-img-box col-sm-5">
              <div class="product-img-box-wrapper">
                <div class="product-img-wrapper">
                  <img id="product-zoom" src="{{ product.profileUrl }}" data-zoom-image="{{ product.profileUrl }}" alt="Product main image">
                </div>

                <a href="#" class="product-img-zoom" title="Zoom">
                  <span class="glyphicon glyphicon-search"></span>
                </a>
              </div>

              <div class="owl-carousel manual" id="productGalleryThumbs">
                {% for photo_url in product.PhotosUrls %}
                  <div class="product-img-wrapper">
                    <a href="#" data-image="{{ photo_url }}" data-zoom-image="{{ photo_url }}" class="product-gallery-item">
                      <img src="{{ photo_url }}" alt="product">
                    </a>
                  </div>
                {% endfor %}
                {% for cl_url in product.PhotosUrls %}
                  <div class="product-img-wrapper">
                    <a href="#" data-image="{{ photo_url }}" data-zoom-image="{{ photo_url }}" class="product-gallery-item">
                      <img src="{{ photo_url }}" alt="product">
                    </a>
                  </div>
                {% endfor %}
              </div>
            </div>

            <div class="product-details-box col-sm-7">
              {# <div class="product-nav-container">
                 <div class="product-nav product-nav-prev">
                   <a href="#" title="Previous Product">
                     <i class="fa fa-chevron-left"></i>
                   </a>

                   <div class="product-nav-dropdown">
                     <img src="{{ product.profileUrl }}" alt="Product">
                     <h4>Prece</h4>
                   </div>
                 </div>
                 <div class="product-nav product-nav-next">
                   <a href="#" title="Next Product">
                     <i class="fa fa-chevron-right"></i>
                   </a>

                   <div class="product-nav-dropdown">
                     <img src="{{ product.profileUrl }}" alt="Product">
                     <h4>Next</h4>
                   </div>
                 </div>
               </div>#}
              <h1 class="product-name">
                {{ product.name }}
              </h1>

              <div class="product-rating-container">
                <div class="product-ratings">
                  <div class="ratings-box">
                    <div class="rating" style="width:60%"></div>
                  </div>
                </div>
                <div class="review-link">
                  <a href="#" class="review-link-in" rel="nofollow"> <span class="count">1</span> customer review</a> |
                  <a href="#" class="write-review-link" rel="nofollow">Add a review</a>
                </div>
              </div>

              <div class="product-short-desc">
                <p>{{ product.description }}</p>
              </div>

              <div class="product-detail-info">
                <div class="product-price-box">
                  <span class="old-price">{{ product.priceMin | amount_format }}</span>
                  <span class="product-price">{{ product.priceShown | amount_format }}</span>
                </div>
                <p class="availability">
                  <span class="font-weight-semibold">Paiement:</span>
                  {{ product.payFrequency | trans }}
                </p>
                <p class="email-to-friend"><a href="#">Partager ce Produit</a></p>
              </div>

              <div class="product-actions">
                {#<div class="product-detail-qty">
                  <input type="text" value="1" class="vertical-spinner" id="product-vqty">
                </div>#}
                {% include 'XSMarketPlaceBundle:Cart:addProduct.html.twig' with {'id' : product.id}  %}
                {% include 'XSMarketPlaceBundle:WishList:addProduct.html.twig' with {'id' : product.id} %}
                {% include 'XSMarketPlaceBundle:CompareList:addProduct.html.twig' with {'id' : product.id} %}
              </div>
              <div class="product-share-box">
                <div class="addthis_inline_share_toolbox"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="tabs product-tabs">
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#product-desc" data-toggle="tab">Description</a>
            </li>
            <li>
