{% extends "@Main/Admin/base.html.twig" %}
{#Visualisation et gestion de tous les artistes#}
{% block title %}
  Nouvel Album de {{ artist.nickname }} - {{ parent() }}
{% endblock %}

{% block page_title %}
  Nouvel Album de {{ artist.nickname }}
{% endblock %}

{% block body_inner_main %}
  <div class="row">
    <div class="col-xl-12 order-xl-1">
      <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
          <div class="row align-items-center">
            <div class="col-8">
              <h3 class="mb-0">
                Nouvel Album de
                <a href="{{ path('admin_artists_show', {'id': artist.id}) }}">
                  {{ artist.nickname }}
                </a></h3>
            </div>
            <div class="col-4 text-right">
              <button form="new-artist" class="btn btn-sm btn-primary">Enregistrer</button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <form method="post" action="{{ path('admin_albums_new', {'id_artist': artist.id}) }}" name="new-artist" id="new-artist" enctype="multipart/form-data">
            {{ form_row(form._token) }}
            <h6 class="heading-small text-muted mb-4">Informations Album</h6>
            <div class="pl-lg-4">
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-city">Nom de l'album</label>
                    {{ form_widget(form.name) }}
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-city">Ann√©e de sortie</label>
                    {{ form_widget(form.dateRelease) }}
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-first-name">Photo de l'album</label>
                    <input type="file" id="input-first-name" name="profile" class="form-control form-control-alternative">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label>Description de l'album</label>
                    {{ form_widget(form.desc) }}
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}


