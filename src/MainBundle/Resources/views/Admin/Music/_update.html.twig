<form method="post" action="{{ path('admin_musics_update', {'id': music.id}) }}" name="new-artist" id="new-artist" enctype="multipart/form-data">
  {{ form_row(form._token) }}
  <figure>
    <figcaption>{{ 'label.music.preview'|trans }} <b>{{ music.name }} :</b></figcaption>
    <audio
        controls
        src="{{ music.src | cloudinary_file }}">
      {#src="https://res.cloudinary.com/glpi-ifactory/video/upload/v1548028754/TEST_RR/5c2f094f5142f3495c000f17/musics/1548028751.mp3">#}
      Your browser does not support the
      <code>audio</code> element.
    </audio>
  </figure>
  
  <h6 class="heading-small text-muted mb-4">{{ 'label.music.informations'|trans }}</h6>
  <div class="pl-lg-4">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label class="form-control-label" for="input-city">{{ "label.name"|trans }}</label>
          {{ form_widget(form.name) }}
        </div>
      </div>
    </div>
    {#<div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label class="form-control-label" for="input-city">{{ "label.date_release"|trans }}</label>
          {{ form_widget(form.dateRelease) }}
        </div>
      </div>
    </div>#}
    {#<div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label class="form-control-label" for="input-first-name">{{ "label.profile"|trans }}</label>
          <input type="file" id="input-first-name" name="profile" class="form-control form-control-alternative">
        </div>
      </div>
    </div>#}
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label class="form-control-label" for="input-first-name">{{ "label.file"|trans }}</label>
          <input type="file" id="input-first-name" name="profile" class="form-control form-control-alternative" {#accept="audio/mp3,audio/*;"#}>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label>{{ "label.description"|trans }}</label>
          {{ form_widget(form.desc) }}
        </div>
      </div>
    </div>
  </div>
</form>