{% extends "@Main/Admin/base.html.twig" %}
{#Visualisation et gestion de tous les artistes#}
{% block title %}
  {{ "label.music.new_from_album"|trans }} : {{ album.name }}
{% endblock %}

{% block page_title %}
  {{ "label.music.new_from_album"|trans }} : {{ album.name }}
{% endblock %}

{% block body_inner_main %}
  <div class="row">
    <div class="col-xl-12 order-xl-1">
      <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
          <div class="row align-items-center">
            <div class="col-8">
              <h3 class="mb-0">
                {{ "label.music.new_from_album"|trans }}
                <a href="{{ path('admin_albums_show', {'id': album.id}) }}">
                  {{ album.name }}
                </a>
              </h3>
            </div>
            <div class="col-4 text-right">
              <button form="new-artist" class="btn btn-sm btn-primary">{{ 'button.save'|trans }}</button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <form method="post" action="{{ path('admin_musics_new', {'id_album': album.id}) }}" name="new-artist" id="new-artist" enctype="multipart/form-data">
            {{ form_row(form._token) }}
            <h6 class="heading-small text-muted mb-4">{{ 'label.music.informations'|trans }}</h6>
            <div class="pl-lg-4">
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-city">{{ "label.name"|trans }}</label>
                    {{ form_widget(form.name) }}
                  </div>
                </div>
              </div>
              {#<div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-city">{{ "label.date_release"|trans }}</label>
                    {{ form_widget(form.dateRelease) }}
                  </div>
                </div>
              </div>#}
              {#<div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-first-name">{{ "label.profile"|trans }}</label>
                    <input type="file" id="input-first-name" name="profile" class="form-control form-control-alternative">
                  </div>
                </div>
              </div>#}
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label class="form-control-label" for="input-first-name">{{ "label.file"|trans }}</label>
                    <input type="file" id="input-first-name" name="profile" class="form-control form-control-alternative" accept="audio/mp3,audio/*;">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label>{{ "label.description"|trans }}</label>
                    {{ form_widget(form.desc) }}
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}


