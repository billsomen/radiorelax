{% extends "::base.html.twig" %}

{% block stylesheets %}
  <!--Start Style -->
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/css/fonts.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/css/bootstrap.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/css/font-awesome.min.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/js/plugins/swiper/css/swiper.min.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/js/plugins/nice_select/nice-select.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/js/plugins/player/volume.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/js/plugins/scroll/jquery.mCustomScrollbar.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/css/style.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('assets/corebundle/css/custom.css') }}">
  <!-- Favicon Link -->
{% endblock %}

{% block title %}
  {{ app_name }} | {{ 'app.phrase'|trans }}
{% endblock %}

{% block body_inner %}
  <!--Loader-->
  <!--Main Wrapper Start-->
  <div class="ms_main_wrapper">
    <!---Side Menu Start-->
    <div class="ms_sidemenu_wrapper">
      <div class="ms_nav_close">
        <i class="fa fa-angle-right" aria-hidden="true"></i>
      </div>
      <div class="ms_sidemenu_inner">
        <div class="ms_logo_inner">
          <div class="ms_logo">
            <a href="{{ path('main_homepage') }}">
              <img src="{{ asset('assets/images/radio-relax-logo-light.png') }}" alt="{{ app_name }} Logo" width="80">
            </a>
          </div>
          <div class="ms_logo_open">
            <a href="{{ path('main_homepage') }}">
              <img src="{{ asset('assets/images/radio-relax-logo-light.png') }}" alt="{{ app_name }} Logo" width="100">
            </a>
          </div>
        </div>
        <div class="ms_nav_wrapper">
          <ul>
            <li>
              <a href="{{ path('core_artists_homepage')}}" class="active" title="Artists">
                <span class="nav_icon"><span class="icon icon_artists"></span></span>
                <span class="nav_text">{{ 'menu.artists'|trans }}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!---Main Content Start-->
    <div class="ms_content_wrapper padder_top80">
      <!---Header-->
      <div class="ms_header">
        {% for flashMessage in app.session.flashbag.get('notice') %}
          <div class="alert alert-success">
            <small>{{ flashMessage |trans }}</small>
          </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
          <div class="alert alert-danger">
            <small>{{ flashMessage |trans }}</small>
          </div>
        {% endfor %}
        <div class="ms_top_right">
          <div class="ms_top_lang">
            {% if app.user %}
              <a href="{{ path('xs_market_place_cart') }}" title="Mon Panier">
                <i class="fa fa-shopping-cart"></i>
                Panier
              </a>
              {#              <div style="width: 1px; height: 25px; border-right: 1px solid black"></div>#}
              <a href="{{ path('admin_profile') }}">
                <img src="{{ asset('assets/adminbundle/img/brand/favicon.png') }}" width="30" title="Mon Profil"/>
                {{ app.user.nickname }}
              </a>
            {% else %}
              <a href="{{ path('core_artists_homepage', {'_locale': 'en'}) }}"><img src="{{ asset('assets/images/uk.png') }}" width="30" title="{{ "locale.language.en.title"|trans }}"/></a>
              <a href="{{ path('core_artists_homepage', {'_locale': 'fr'}) }}"><img src="{{ asset('assets/images/fr.png') }}" width="30" title="{{ "locale.language.fr.title"|trans }}"/></a>
              <a href="{{ path('login') }}" title="{{ 'xs_user.login.hint'|trans }}">
                <span class="fa fa-sign-in"></span>
                {{ 'xs_user.login.hint'|trans }}
              </a>
            {% endif %}
          </div>
          {# <div class="ms_top_btn">
             <a href="javascript:;" class="ms_btn reg_btn" data-toggle="modal" data-target="#myModal"><span>{{ 'button.im_listener_short'|trans }}</span></a>
             <a href="javascript:;" class="ms_btn login_btn" data-toggle="modal" data-target="#myModal1"><span>{{ 'button.im_artist_short'|trans }}</span></a>
           </div>#}
        </div>
      </div>
      
      {% block body_inner_main %}
      
      {% endblock %}
    </div>
    
    
    <!--Footer Start-->
    {% block footer %}
      <div class="ms_footer_wrapper">
        <div class="ms_footer_logo">
          <img src="{{ asset('assets/images/radio-relax-logo-light.png') }}" alt="{{ app_name }} Logo" width="120">
        </div>
        <div class="ms_footer_inner">
          <div class="row">
            {#<div class="col-md-2"></div>#}
            <div class="col-lg-6 col-md-6">
